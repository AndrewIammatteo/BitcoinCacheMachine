#!/bin/bash

set -e
cd "$(dirname "$0")"

# shellcheck disable=1090
source "$BCM_GIT_DIR/.env"

if [[ -z $BCM_DEBUG ]]; then
	export BCM_DEBUG=0
fi

if ! docker image list --format "{{.Repository}}" | grep -q "bcm-trezor"; then
	bash -c "$BCM_GIT_DIR/controller/build.sh"
fi

./commands/cli_entrypoint.sh "$@"
