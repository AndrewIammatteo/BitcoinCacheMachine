#!/bin/bash

set -Eeuo pipefail
cd "$(dirname "$0")"

if [[ -z $BCM_ACTIVE ]]; then
    BCM_ACTIVE=1
fi

# shellcheck disable=1090
source ./env

if ! snap list | grep -q docker; then
    if ! docker image list --format "{{.Repository}},{{.Tag}}" | grep -q "bcm-trezor,$BCM_VERSION"; then
        bash -c "$BCM_GIT_DIR/controller/build.sh"
    fi
fi

if ! grep -qs "$BCM_WORKING_DIR" /proc/mounts; then
    mkdir -p "$BCM_WORKING_DIR"
    mkdir -p "$BCM_WORKING_DIR"
    encfs "$BCM_WORKING_DIR""_enc" "$BCM_WORKING_DIR" -i=10 --extpass='apg -n 1 -m 30 -M CN' <<< "p"
fi

# call the CLI entrypoint.
./commands/cli_entrypoint.sh "$@"
