#!/bin/bash

# ZMQ BLOCKS
ELECTRS_MAINNET_PORT="50001"
ELECTRS_TESTNET_PORT="60001"
ELECTRS_REGTEST_PORT="60401"
ELECTRS_CMD_TEXT=""

# mainnet is defaults
ELECTRS_RPC_PORT="$ELECTRS_MAINNET_PORT"
if [[ "$BCM_ACTIVE_CHAIN" == "testnet" ]]; then
    ELECTRS_RPC_PORT="$ELECTRS_TESTNET_PORT"
    ELECTRS_CMD_TEXT="-testnet"
    elif [[ "$BCM_ACTIVE_CHAIN" == "regtest" ]]; then
    ELECTRS_RPC_PORT="$ELECTRS_REGTEST_PORT"
    ELECTRS_CMD_TEXT="-regtest"
fi

export ELECTRS_CMD_TEXT="$ELECTRS_CMD_TEXT"
export ELECTRS_RPC_PORT="$ELECTRS_RPC_PORT"